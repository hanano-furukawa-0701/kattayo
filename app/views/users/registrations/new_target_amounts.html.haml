.header
  = render "home/header"
.content
  .content__body
    %h2.content__body__title 目標月間支出額の登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "users/shared/error_messages", resource: @target_amount
      .content__body__details
        .field
          = f.label :1ヶ月の目標支出額は？
          %br/
          = f.text_field :price, autofocus: true, autocomplete: "name"
        .actions
          = f.submit "登録する"